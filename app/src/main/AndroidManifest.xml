<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmadbarakat.phonebook" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/phone"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >

        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Add_Activity"
            android:label="Contact Info" >
        </activity>

        <activity
            android:name=".Contact_Activity"
            android:label="Contact Info"
            android:theme="@style/MyPanelTheme">
        </activity>

        <activity
            android:name=".About_Activity"
            android:label="About Developer" >
        </activity>

    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>